{
    "compilerOptions": {
        "module": "none",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "strictNullChecks": true,
        "noEmitOnError": true,
        "lib": ["es5", "es2015", "dom"]
    },
    "include": ["src/*.ts", "src/*.d.ts"],
    "exclude": ["*.spec.ts"]
}